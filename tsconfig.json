{
  "strict": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
